/// Guest users information who do not authenticate but may have session or
/// visitor footprints. Used to track guest activity and enable browsing
/// capabilities without login. This entity has minimal fields and no
/// authentication credentials.
///
/// @namespace Actors
/// @author AutoBE - https://github.com/wrtnlabs/autobe
model discussion_board_guests {
  //----
  // COLUMNS
  //----
  /// Primary Key.
  id String @id
  
  /// Unique session token to identify guest user session.
  session_token String
  
  /// Timestamp when the guest session was created.
  created_at DateTime
  
  /// Timestamp of the last guest session update.
  updated_at DateTime
  
  /// Soft delete timestamp if guest session is invalidated.
  deleted_at DateTime?
  
  //----
  // RELATIONS
  //----
  @@unique([session_token])
  @@index([created_at])
}

/// Registered members who can create discussion topics and replies. Members
/// have authenticated sessions using email and password hash and can manage
/// their profiles.
///
/// @namespace Actors
/// @author AutoBE - https://github.com/wrtnlabs/autobe
model discussion_board_members {
  //----
  // COLUMNS
  //----
  /// Primary Key.
  id String @id
  
  /// Member's unique email address for login and communication.
  email String
  
  /// Hashed password for member authentication.
  password_hash String
  
  /// Display name shown publicly in posts and replies.
  display_name String
  
  /// Timestamp when the member account was created.
  created_at DateTime
  
  /// Timestamp of the last update to the member account.
  updated_at DateTime
  
  /// Soft delete timestamp if the member account is deactivated.
  deleted_at DateTime?
  
  //----
  // RELATIONS
  //----
  discussion_board_posts discussion_board_posts[]
  discussion_board_replies discussion_board_replies[]
  
  @@unique([email])
  @@index([created_at])
}

