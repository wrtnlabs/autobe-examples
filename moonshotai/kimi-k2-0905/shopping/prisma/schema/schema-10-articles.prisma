/// Editorial content scheduling and planning system for coordinated content
/// publishing
///
/// @namespace Articles
/// @author AutoBE - https://github.com/wrtnlabs/autobe
model shopping_mall_editorial_calendar {
  //----
  // COLUMNS
  //----
  /// Primary Key.
  id String @id
  
  /// Calendar owner's {@link shopping_mall_administrators.id}
  administrator_id String
  
  /// Linked content resource ID for scheduling
  content_reference_id String?
  
  /// Assigned creator's {@link shopping_mall_administrators.id}
  assigned_to_id String?
  
  /// Editorial item title or topic
  title String
  
  /// Detailed assignment description
  description String?
  
  /// Type: blog_post, newsletter, banner, content_page
  content_type String
  
  /// Status: planned, assigned, in_progress, completed, published
  status String
  
  /// Priority: low, medium, high, urgent
  priority String
  
  /// Target publication or completion date
  scheduled_date DateTime?
  
  /// Hard deadline for content delivery
  deadline DateTime?
  
  /// When editorial item was completed
  completed_at DateTime?
  
  /// When associated content was published
  published_at DateTime?
  
  /// Estimated effort required in hours
  estimated_hours Float?
  
  /// Actual hours spent on creation
  actual_hours Float?
  
  /// SEO and topic keywords
  keywords String?
  
  /// Intended audience description
  target_audience String?
  
  /// Associated marketing campaigns
  related_campaigns String?
  
  /// Internal notes and communications
  notes String?
  
  /// Editorial approval: pending, approved, rejected
  approval_status String?
  
  /// Approving administrator's ID
  approved_by_id String?
  
  /// Soft delete timestamp
  deleted_at DateTime?
  
  /// When editorial item was created
  created_at DateTime
  
  /// When editorial item was last modified
  updated_at DateTime
  
  //----
  // RELATIONS
  //----
  owner shopping_mall_administrators @relation("shopping_mall_editorial_calendar_of_administrator_id", fields: [administrator_id], references: [id], onDelete: Cascade)
  contentReference shopping_mall_blog_posts? @relation(fields: [content_reference_id], references: [id], onDelete: Cascade)
  assignedTo shopping_mall_administrators? @relation("shopping_mall_editorial_calendar_of_assigned_to_id", fields: [assigned_to_id], references: [id], onDelete: Cascade)
  
  @@index([administrator_id])
  @@index([content_reference_id])
  @@index([assigned_to_id])
  
  @@index([scheduled_date, deadline])
  @@index([content_type, status])
  @@index([priority, status])
  @@index([scheduled_date, status])
}