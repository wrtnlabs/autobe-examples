/// Blog post content management for shopping mall platform with publishing
/// workflow and author relationships
///
/// @namespace Articles
/// @author AutoBE - https://github.com/wrtnlabs/autobe
model shopping_mall_blog_posts {
  //----
  // COLUMNS
  //----
  /// Primary Key.
  id String @id
  
  /// Author administrator's {@link shopping_mall_administrators.id}
  administrator_id String
  
  /// Primary category's {@link shopping_mall_categories.id}
  category_id String?
  
  /// Blog post title displayed to readers
  title String
  
  /// URL-friendly slug for SEO optimization
  slug String
  
  /// Brief excerpt or summary for previews
  excerpt String?
  
  /// Main blog post content in markdown or HTML format
  content String
  
  /// Publishing status: draft, pending, published, archived
  status String
  
  /// Detailed workflow state
  publishing_status String
  
  /// Whether post appears in featured section
  is_featured Boolean
  
  /// Number of approved comments
  comment_count Int
  
  /// Total view count for analytics
  view_count Int
  
  /// When the post was published
  published_at DateTime?
  
  /// When the post is scheduled for publication
  scheduled_at DateTime?
  
  /// When featured status expires
  featured_until DateTime?
  
  /// SEO meta title override
  meta_title String?
  
  /// SEO meta description
  meta_description String?
  
  /// Comma-separated tags for filtering
  tags String?
  
  /// Estimated reading time in minutes
  read_time_minutes Int
  
  /// Total word count for content analysis
  word_count Int
  
  /// Soft delete timestamp for content removal
  deleted_at DateTime?
  
  /// When the blog post was created
  created_at DateTime
  
  /// When the blog post was last modified
  updated_at DateTime
  
  //----
  // RELATIONS
  //----
  author shopping_mall_administrators @relation(fields: [administrator_id], references: [id], onDelete: Cascade)
  category shopping_mall_categories? @relation(fields: [category_id], references: [id], onDelete: Cascade)
  
  shopping_mall_editorial_calendar shopping_mall_editorial_calendar[]
  
  @@index([administrator_id])
  
  @@unique([slug])
  @@index([status, publishing_status])
  @@index([published_at])
  @@index([scheduled_at])
  @@index([is_featured, featured_until])
  @@index([category_id, status])
}

