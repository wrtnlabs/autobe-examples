/// Customer information, but not a person but a **connection** basis. This
/// is the main entity for customer identity management. Contains
/// authentication credentials and basic profile information.
///
/// @namespace Actors
/// @author AutoBE - https://github.com/wrtnlabs/autobe
model shopping_customers {
  //----
  // COLUMNS
  //----
  /// Primary Key.
  id String @id
  
  /// Customer's email address. Used for login and communication.
  email String
  
  /// Securely hashed password for authentication.
  password_hash String
  
  /// Customer's full name.
  name String
  
  /// Customer's phone number.
  phone String?
  
  /// Customer's primary address.
  address String?
  
  //----
  // RELATIONS
  //----
  shopping_product_reviews shopping_product_reviews[]
  shopping_orders shopping_orders[]
  shopping_shopping_carts shopping_shopping_carts[]
  shopping_payments shopping_payments[]
  
  @@unique([email])
  @@index([phone])
}

