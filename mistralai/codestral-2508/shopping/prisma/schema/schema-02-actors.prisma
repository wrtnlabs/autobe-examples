/// Represents unauthenticated users who can browse products and add items to
/// cart.
///
/// @namespace Actors
/// @author AutoBE - https://github.com/wrtnlabs/autobe
model shopping_mall_guest {
  //----
  // COLUMNS
  //----
  /// Primary Key.
  id String @id
  
  /// Unique identifier for the guest session.
  session_id String
  
  /// Timestamp when the guest record was created.
  created_at DateTime
  
  /// Timestamp when the guest record was last updated.
  updated_at DateTime
  
  //----
  // RELATIONS
  //----
  @@unique([session_id])
  @@index([created_at])
}

/// Represents authenticated users who can place orders, manage their
/// profile, and view order history.
///
/// @namespace Actors
/// @author AutoBE - https://github.com/wrtnlabs/autobe
model shopping_mall_member {
  //----
  // COLUMNS
  //----
  /// Primary Key.
  id String @id
  
  /// Email address of the member.
  email String
  
  /// Hashed password for authentication.
  password_hash String
  
  /// Full name of the member.
  name String
  
  /// Phone number of the member.
  phone String?
  
  /// Shipping address of the member.
  address String?
  
  /// Timestamp when the member record was created.
  created_at DateTime
  
  /// Timestamp when the member record was last updated.
  updated_at DateTime
  
  /// Timestamp when the member record was soft deleted.
  deleted_at DateTime?
  
  //----
  // RELATIONS
  //----
  shopping_carts shopping_carts[]
  shopping_orders shopping_orders[]
  shopping_coupon_usage shopping_coupon_usage[]
  shopping_coins shopping_coins?
  shopping_coin_transactions shopping_coin_transactions[]
  shopping_inquiries shopping_inquiries[]
  shopping_favorites shopping_favorites[]
  shopping_article_comments shopping_article_comments[]
  
  @@unique([email])
  @@index([created_at])
}

